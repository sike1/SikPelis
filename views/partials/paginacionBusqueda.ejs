<div class="row justify-content-center">
    <div class="col-auto p-5 text-center row justify-content-center">
        <nav aria-label="Page navigation ">
            <ul class="pagination pagination-lg">
              <% var n = 1; %>
              <% while (n <= paginas) {%>
                <li class="page-item">
                    <a class="page-link text-dark <%= paginaActual == n ? "bg-gris" : " " %>" href="<%= sitio %>&pagina=<%= n %>" tabindex="-1"> <%= n++ %> </a>
                </li>
              <%  }   %>       
            </ul>
          </nav> 
    </div>
</div>