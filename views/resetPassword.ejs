<main class="contenedor contenedor-formularios">
  <h1><%= pagina %></h1>
  <form method="post" class="default-form">
    <div class="campo">
      <input type="password" name="password" placeholder="Contraseña" />
    </div>
    <div class="campo">
      <input type="password" name="confirmar" placeholder="Repite Contraseña" />
    </div>
    <div class="campo enviar">
      <input
        type="submit"
        value="Restablecer Contraseña"
        class="btn btn-azul"
      />
    </div>
  </form>
</main>
