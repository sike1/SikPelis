<main class="contenedor panel-administracion">
  <h1><%= pagina %></h1>

  <div class="contenedor-botones">
    
    <div class="dropdown">
      <% if (revisar !== 0) { %>
        <a type="button" class="btn btn-primary dropdown-toggle position-relative" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Administración
          <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
            <span class="visually-hidden">New alerts</span>
          </span>
        </a>
      <% } else { %>
        <a class="btn btn-primary dropdown-toggle position-relative" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Administración
        </a>
      <% } %>
      <ul class="dropdown-menu">
        <li><a href="/nuevaPelicula" class="fw-bold dropdown-item ">Nueva Pelicula</a></li>
        <li><a href="/pelisSinRevisar" class="fw-bold dropdown-item">Mis peliculas sin revisar</a></li>
        <% if (usuario.superAdmin === 1) { %>
          <div class="dropdown-divider"></div>
          <li><a href="/nuevoAdmin" class="fw-bold dropdown-item">Hacer administrador</a></li>
          <li><a href="/noAdmin" class="fw-bold dropdown-item">Quitar administrador</a></li>
          <li><a href="/revisarPelis" class="fw-bold dropdown-item">Revisar Peliculas <% if (revisar != 0) { %>
            <span class="badge rounded-pill badge-danger" ><%= revisar %></span>
          <% } %>
          </a></li>
        <% } %>
      </ul>
    </div>
    
  </div>

  <div class="seccion-admin contenedor">
    <h2>Películas</h2>
    <ul>
      <% peliculas.forEach(peli => { %>

      <li>
        <div class="informacion-admin">
          <a href="/pelicula/<%= peli.slug %>" target="_blank">
            <h3><%= peli.titulo %></h3>
          </a>
        </div>
        <div class="acciones contenedor-botones">
          <a href="/editarPelicula/<%= peli.id %>" class="btn btn-success"
            >Editar</a
          >
          <a href="/eliminarPelicula/<%= peli.id %>" class="btn btn-danger"
            >Eliminar</a
          >
        </div>
      </li>
      <% }) %>
    </ul>
  </div>
  <%- include('partials/paginacion.ejs') %>
  
</main>
