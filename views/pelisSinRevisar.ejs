<main class="contenedor panel-administracion">
    <div class="seccion-admin">
      <% if (peliculas.length > 0) { %>
      <h2>Peliculas a revisar</h2>
      <ul>
        <% peliculas.forEach(peli => { %>
  
        <li>
          <div class="informacion-admin">
            <a href="/pelicula/<%= peli.slug %>" target="_blank">
              <h3><%= peli.titulo %></h3>
            </a>
          </div>
          <div class="acciones contenedor-botones">
            <a href="/editarPelicula/<%= peli.id %>" class="btn btn-primary"
              >Editar Pelicula</a
            >
            <a href="/eliminarPelicula/<%= peli.id %>" class="btn btn-danger"
                >Eliminar Pelicula</a
              >
          </div>
        </li>
  
        <% }) %>
      </ul>
      <%- include('partials/paginacion.ejs') %> <% } else { %>
  
      <h2>No tienes peliculas para revisar</h2>
  
      <% } %>
    </div>
  </main>
  